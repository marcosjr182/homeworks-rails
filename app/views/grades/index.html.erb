<div class="row">
  <div class="col-md-12 path">
    
  </div>
</div>

<header>
  <div class="col-md-8">
    Grades
  </div>
  <button type="button" class="btn btn-primary col-md-2 col-md-offset-2" data-toggle="collapse" data-target="#form">
         New Grade
  </button>
</header>  

<div id="form" class="collapse col-md-12">
    <%= render "form" %>
</div>

<table class="table table-default table-hover table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="2"></th>
      <th></th>
    </tr>

  </thead>

  <tbody>
    <% @grades.each do |grade| %>
      <tr>
        <td><%= grade.name %></td>
        <td><%= link_to 'Show', grade %></td>
        <td><%= link_to 'Edit', edit_grade_path(grade) %></td>
        <td><%= link_to 'Destroy', grade, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

