<div class="row">
  <div class="col-md-12 path">
    <%= @grade.name %> >     
    <%= @subject.name %>      
  </div>
</div>

<header class="col-md-10 col-md-offset-1">
  <a href="../" class="btn btn-default col-md-1 col-xs-1">Voltar</a>
  <div class="col-md-7 col-xs-4">
    Homeworks
  </div>
  <button type="button" class="btn btn-primary col-xs-5 col-md-4" data-toggle="collapse" data-target="#form">
         New Homework
  </button>
</header>  

<div id="form" class="collapse col-md-offset-7 col-md-4">
  <div class="row">
    <%= render "homeworks/form" %>
  </div>  
</div>

<div class="row">
  <div class="content col-md-10 col-md-offset-1">
    <table class="table table-default table-hover table-striped">
      <thead>
        <tr>
          <td>Name</td>
          <td>Deadline</td>
          <td colspan="3"></td>
        </tr>
      </thead>
      <tbody>
        <%= render @subject.homeworks %>
      </tbody>
    </table>    
  </div>
</div>

<br>



