<%= form_for(:homework, url: grade_subject_homework_path(@grade,@subject,@homework),method: "patch", html: {class: "form-horizontal", role: "form"}) do |f| %>
  
  <div class="form-group">
    <%= f.label :name, class: "col-sm-3 control-label" %>
    <div class="col-sm-8">
      <%= f.text_field :name, class: "form-control" %>  
    </div>
  </div>
  <div class="form-group">
    <%= f.label :deadline, class: "col-sm-3 control-label" %>
    <div class="col-sm-8">
      <%= f.date_field :deadline, class: "form-control" %>  
    </div>
  </div>
  
  <div class="form-group">
    <div class="col-sm-offset-3 col-sm-3">
      <%= f.submit class: "btn btn-default" %>
    </div>  
  </div>
  
<% end %>